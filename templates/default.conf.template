server {
    listen 80;
    charset utf-8;
 
    location = /health {
        add_header Content-Type text/plain;
        return 200 "ok";
    }

    location = / {
        add_header Content-Type text/plain;
        return 200 "ok";
    }

    location ${PATH_PREFIX} {
        rewrite ^${PATH_PREFIX}(.*)$ /$1 break;
        proxy_pass http://${AWS_BUCKET}.s3.amazonaws.com;
    }
}